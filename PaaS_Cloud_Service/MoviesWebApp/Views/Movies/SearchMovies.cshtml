@model IEnumerable<MoviesDBCommon.Movie>

<div>
    <div>
        <h1>Search</h1>
        <h2>Type any string you want to search in movie titles</h2>
    </div>
    <hr>
    @using (Html.BeginForm())
    {
        <div class="form-inline">
            <div class="form-group">
                Title
                <div class="col-md-10">
                    @Html.TextBox("title")
                </div>
            </div>

            <div class="form-group">
                Year
                <div class="col-md-10">
                    @Html.TextBox("year")
                </div>
            </div>

            <div class="form-group">
                Type
                <div class="col-md-10">
                    @Html.TextBox("type")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Filter" class="btn btn-default" />
                </div>
            </div>
        </div>
        <br />

            @*<div class="form-horizontal">
                <div class="breadcrumb">
                    <div class="row">
                        <div class="col-sm-2">
                            <p>Title @Html.TextBox("title")</p>
                        </div>
                        <div class="col-sm-2 ">
