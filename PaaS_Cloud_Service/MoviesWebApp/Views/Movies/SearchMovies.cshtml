                        </div>
                        <div class="col-sm-2 ">
                            <p>Type   @Html.TextBox("type")</p>
                        </div>
                        <div class="col-sm-2">
                            <br />
                            <p><input type="submit" value="Filter" class="btn-group-xs"></p>
                        </div>
